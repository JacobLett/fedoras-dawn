<script>

  document.addEventListener("DOMContentLoaded", function () {
    const container = document.getElementById("quotes-container");
    const quotes = document.querySelectorAll("#quotes-container .quote");
    let currentIndex = 0;
  
    // Function to adjust the container height
    function adjustContainerHeight() {
      const activeQuote = quotes[currentIndex];
      container.style.height = `${activeQuote.offsetHeight}px`;
    }
  
    function showNextQuote() {
      // Remove the 'active' class from the current quote
      quotes[currentIndex].classList.remove("active");
  
      // Increment the index to show the next quote
      currentIndex = (currentIndex + 1) % quotes.length;
  
      // Add the 'active' class to the next quote
      quotes[currentIndex].classList.add("active");
  
      // Adjust the container height for the new active quote
      adjustContainerHeight();
    }
  
    // Set an interval to change quotes every 5 seconds
    setInterval(showNextQuote, 6000);
  
    // Adjust height on page load
    adjustContainerHeight();
  });
  
</script>

